# HomevoltScraper environment variables for docker-compose
# Copy to .env and adjust values

# Required: URL to the Homevolt battery status page
HOMEVOLT_URL=https://example.com/battery

# Optional: MQTT broker URL (omit to print to stdout)
# Formats: mqtt://host:1883 or tcp://host:1883
MQTT_BROKER=

# Optional: MQTT topic
MQTT_TOPIC=homevolt/status

# Optional: MQTT auth
MQTT_USER=
MQTT_PASS=

# Interval for continuous mode; use 0s for one-shot
INTERVAL=300s

# Home Assistant discovery prefix
HA_PREFIX=homeassistant
